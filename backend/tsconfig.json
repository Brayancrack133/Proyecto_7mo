{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    // MÃ³dulos y target
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    
    // Source maps y declaraciones
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Strict mode y limpieza
    "strict": true,
    "skipLibCheck": true,
    
    // Interoperabilidad
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    
    // Se eliminan opciones experimentales o conflictivas para asegurar estabilidad
    // "verbatimModuleSyntax": false, // Se elimina
    // "isolatedModules": false,      // Se elimina
    // "noUncheckedIndexedAccess": false // Se elimina
  },
  "include": ["src//*"],
  "exclude": ["node_modules", "dist"]
}